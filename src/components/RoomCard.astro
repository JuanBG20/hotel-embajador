---
import Image from 'astro/components/Image.astro';

const { roomType, srcRoomImage, href } = Astro.props;
---

<div class="roomCard">
  <Image
    class="roomImage"
    src={srcRoomImage}
    alt={`Imagen de la habitación ${roomType}`}
  />

  <div class="imageInfo">
    <h3>{roomType}</h3>
    <div>
      <slot />
    </div>

    <a href={href} class="btn-outline">Más información</a>
  </div>
</div>

<style>
  .roomCard {
    position: relative;
    overflow: hidden;
    text-align: center;
    width: 100%;
  }

  .roomImage {
    width: 100%;
    height: auto;
    display: block;
  }

  .imageInfo {
    padding: 1rem;
    background-color: var(--color-bg-accent);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .imageInfo h3 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    color: var(--color-text-light);
  }

  .imageInfo div {
    font-size: 1rem;
    max-width: 85%;
    margin: 0 auto;
    color: var(--color-text-light);
  }

  .imageInfo div > :global(*) {
    margin-bottom: 0.5rem;
    line-height: 1.25;
  }

  @media (min-width: 768px) {
    .roomImage {
      height: calc(100vh - var(--header-height-scrolled));
      object-fit: cover;
    }

    .imageInfo {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.6);
      color: var(--color-text-dark);
      opacity: 0;
      visibility: hidden;
      transition:
        opacity 0.3s ease,
        visibility 0.3s ease;
      pointer-events: none;
    }

    .roomCard:hover .imageInfo {
      opacity: 1;
      visibility: visible;
      pointer-events: auto;
    }

    .imageInfo h3 {
      color: var(--color-text-dark);
    }

    .imageInfo div {
      color: var(--color-text-dark);
      max-width: 60vw;
    }

    .btn-outline {
      padding: 0.5rem 1rem;
      font-size: 1rem;
      border: 2px solid var(--color-dark);
      border-radius: 5px;
      background-color: var(--color-dark);
      color: var(--color-bg-light);
      cursor: pointer;
      transition:
        background-color 0.3s ease,
        color 0.3s ease;
    }

    .btn-outline:hover {
      background-color: transparent;
      border: 2px solid var(--color-dark);
      color: var(--color-dark);
    }
  }
</style>
